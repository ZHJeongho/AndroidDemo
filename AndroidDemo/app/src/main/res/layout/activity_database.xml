<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_new_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create DB"/>
    <Button
        android:id="@+id/btn_delete_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete DB"/>
    <Button
        android:id="@+id/btn_insert_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insert data"/>
    <Button
        android:id="@+id/btn_delete_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete data"/>
    <Button
        android:id="@+id/btn_update_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update data"/>
    <Button
        android:id="@+id/btn_query_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="query data"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>